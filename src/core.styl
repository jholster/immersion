input:invalid + label:after
  font-family icon
  content '\e804'
  display inline-block
  margin-left base * .5
  font-size 125%
  vertical-align middle
  color error

label
  user-select none
  cursor pointer

select
  padding-right base * 2
  text-indent 0.01px // hide arrow in firefox
  text-overflow ''   // hide arrow in firefox
  cursor pointer

  & + label:after
    font-family icon
    content '\e800'
    position relative
    left base * -1.5
    width base
    pointer-events none

button
  cursor pointer

progress
  height base
  appearance none
  border-radius base * .5
  overflow hidden

  &::-webkit-progress-bar
    background bg_alt

  &::-webkit-progress-value
    background fg_alt
    border (base * .25) solid bg_alt
    border-radius base * .5

ul
  margin base * 1.5 0
  list-style-type none

  li
    margin .5em 0

    &:before
      font-family icon
      content '\e803'
      position relative
      float left
      margin-left -2em

table
  margin base * 1.5 0

  td, th
    padding base * .5 base
    text-align left

  tbody tr:nth-child(odd)
    background darken(bg, 10%)

.modal
  display none
  position fixed
  top 0
  right @top
  bottom @top
  left @top
  z-index 10000
  align-items center
  justify-content center

  &.fullscreen > :first-child
    width 100%
    height 100%
    border-radius 0

  & > :first-child
    position relative
    background bg
    padding base * 2
    width 600px
    border-radius base_radius * 2
    box-shadow 0 0 (base * 6) rgba(0, 0, 0, .75)

    .modal-close
      position absolute
      top base * -.5
      right base * -.25
      font-size base * 2
      line-height 1
      padding base
      cursor pointer

      &:before
        content 'Ã—'

      &:hover
        color #fff

    h2
      border-bottom 1px solid darken(bg, 15%)
      padding-bottom base

    & > :last-child
      padding-top base * 1.5
      text-align center

      & > *
        display inline-block
        margin base * .5 base * .5

#root
  -webkit-transition opacity .25s

body.modal-visible
  overflow hidden

  .modal
    display flex

  #root
    opacity .25
    pointer-events none

@media only screen and (max-width: 767px)
  body
    font-weight 400

  .modal > :first-child
      width 100%
      height 100%
      border-radius 0

  button
    padding-left 1em
    padding-right @padding-left
