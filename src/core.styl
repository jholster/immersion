base = 16px
base_radius = base * .25
base_color = #b2dc6c

fg = #c0c0c2
fg_alt = darken(fg, 30%)
bg = #40494B
bg_alt = darken(bg, 20%)
fx = #b2dc6c
fx_hl = saturate(fx, 30%)
error = #f6ae00

[hidden]
template
    display none

html
  font-family sans-serif
  -ms-text-size-adjust 100%
  -webkit-text-size-adjust 100%

body
  font-family "helvetica neue", "segoe ui", sans-serif
  font-weight 200
  font-size base
  color fg
  background bg
  line-height 1.5
  x-webkit-perspective 900

#root
  color inherit
  background inherit

.inverted
  color bg
  background #fafafa

*
  box-sizing border-box

a
  color fx
  text-decoration none

  :visited
    color darken(fx, 20%)

  &[href^="http"]:after
    font-family icon
    content '\e805'
    margin-left .35em

p
  margin base 0
  margin 1em 0

h1, h2, h3, h4, h5, h6
  margin 0 0 base 0
  margin base * 1.5 0
  line-height 1.25

h1
  font-size base * 4
  font-weight 100

h2
  font-size base * 2
  font-weight 200

h3
  font-size base * 1
  font-weight 400
  text-transform uppercase

input,
select,
button,
textarea
  appearance none
  background bg_alt
  border 0
  padding base * .5
  border-radius base_radius
  color inherit
  xbox-shadow inset (base * .125) (base * .125) (base * .25) bg_alt
  xborder 1px solid rgba(0, 0, 0, .125)
  placeholder rgba(255, 255, 255, .2)
  transition background .125s

  &:hover
    background rgba(0, 0, 0, .15)

  &:focus
    outline 0
    xborder 1px solid base_color

button
  color bg
  background fx
  padding base * .5 base * 2

  &:hover
    background fx_hl

  &.alt
    color bg
    background fg

    &:hover
      background lighten(fg, 30%)

input[type="number"]::-webkit-inner-spin-button
  position relative
  left base * -.25

input[type="color"]
  border 0
  cursor pointer

  &::-webkit-color-swatch-wrapper
    padding 0

  &::-webkit-color-swatch
    border 0
    border-radius base_radius
    margin (base * -.75) (base * -2) (base * -.75) (base * -.5)

input[type="date"],
input[type="datetime"],
input[type="datetime-local"]

  &::-webkit-inner-spin-button
    display none

  &::-webkit-clear-button
    margin-right .25em

  &::-webkit-calendar-picker-indicator
    color transparent
    background transparent
    cursor pointer

    &:hover
      background transparent

  &::-webkit-calendar-picker-indicator:after
    font-family icon
    content '\e802'
    color fg
    position relative
    top -.25em

input[type="time"]
  width 5em

  &::-webkit-inner-spin-button
    display none

input[type="checkbox"],
input[type="radio"]
  appearance none
  width base * 1.5
  height @width
  vertical-align bottom
  margin-right base * .25
  text-align center
  cursor pointer
  border-radius base

  &:before
    content ''
    display inline-block
    width 65%
    width 50%
    height @width
    margin 25%
    border-radius base
    background rgba(255, 255, 255, .05)

  &:checked:before
    background base_color

input[type="checkbox"].switch
  width base * 2.5
  position relative
  border-radius base * .75

  &:before
    content ''
    background fg_alt
    width 60%
    height 100%
    position absolute
    left 0
    top 0
    margin 0
    box-sizing border-box
    border (base * .125) solid bg_alt
    border-radius base_radius
    border-radius base
    transition left .125s

  &:checked:before
    background fx
    left 40%
    right 0

.radio-slide
  background bg_alt
  display inline-block
  border-radius base
  overflow hidden
  height base * 2

  input
    display none

  label
    display inline-block
    height 100%
    line-height base * 1.75
    color fg
    border-radius base
    border (base * .125) solid bg_alt
    padding 0 base
    margin 0
    text-align center
    min-width 6em
    transition background .125s, color .125s

    &:hover
      background lighten(bg_alt, 5%)

  input:checked + label
    background fx
    background lighten(bg, 5%)
    color bg
    color fg
    color fx

input[type="range"]
  height base * 1.5
  border 0
  box-shadow none
  background transparent
  cursor pointer
  padding 0

  &::-webkit-slider-runnable-track
    background bg_alt
    border-radius base * .75
    height @height

  &::-webkit-slider-thumb
    appearance none
    background fx
    height base * 1.5
    width @height
    border-radius 50%
    border (base * .125) solid bg_alt

input[type="search"]
  &::-webkit-textfield-decoration-container
    margin-left -6px

  &::-webkit-search-cancel-button
    cursor pointer

